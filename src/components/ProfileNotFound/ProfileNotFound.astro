<style>
  .profile-not-found {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background: linear-gradient(135deg, #ff7eb3, #ff758c);
    color: #fff;
    font-family: 'Poppins', sans-serif;
    text-align: center;
    overflow: hidden;
    position: relative;
  }

  .content {
    z-index: 2;
    max-width: 600px;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    animation: fadeIn 1.2s ease-out;
  }

  .username {
    font-size: 2.5rem;
    font-weight: 800;
    color: #ffefd5;
    margin-bottom: 1rem;
  }

  .username span {
    color: #fff;
    text-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    font-size: 3rem;
  }

  .message {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .cta {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .create-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: #ff4d4f;
    color: #fff;
    font-size: 1.2rem;
    font-weight: bold;
    text-decoration: none;
    border-radius: 50px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .create-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .floating-illustrations {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .bubble {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    animation: float 6s ease-in-out infinite;
    filter: blur(10px);
  }

  .bubble-1 {
    width: 100px;
    height: 100px;
    bottom: 10%;
    left: 20%;
  }

  .bubble-2 {
    width: 150px;
    height: 150px;
    top: 20%;
    right: 25%;
  }

  .bubble-3 {
    width: 80px;
    height: 80px;
    top: 50%;
    left: 50%;
  }

  .bubble-4 {
    width: 120px;
    height: 120px;
    bottom: 20%;
    right: 15%;
  }

  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .username {
      font-size: 2rem;
    }

    .username span {
      font-size: 2.5rem;
    }

    .content {
      padding: 1.5rem;
    }

    .message {
      font-size: 1rem;
    }

    .cta {
      font-size: 1rem;
    }

    .create-button {
      font-size: 1rem;
      padding: 0.6rem 1.5rem;
    }
  }
</style>