// FloatingAd.astro
---
<div class="floating-logo">
    <div class="content-logo">
      <a href="https://lulinks-7e45f.web.app/" target="_blank" class="logo-link">
        <span class="logo-text">Crea tu perfil con <strong>lulinks.com</strong></span>
      </a>
    </div>
  </div>
<style>
    
    .floating-logo {
  position: fixed;
  bottom: 1rem;
  right: 1rem;
  z-index: 1000;
  max-width: 20rem;
  min-height: 2.5rem;
  display: grid;
  border-radius: 24px;
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  cursor: pointer;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out;
}

.floating-logo:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.floating-logo .content-logo {
  width: 100%;
  height: 100%;
  border-radius: 24px;
  color:  #333; /* Gris oscuro */
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.5rem 2rem;
  opacity: 0.8;
}

.floating-logo .logo-link {
  text-decoration: none;
  color: inherit;
}

.floating-logo .logo-text strong {
  color:  #2b2b2b; /* Puedes cambiar el color primario */
}

/* Efectos de borde animado */
.floating-logo::after, .floating-logo::before {
  content: '';
  position: absolute;
  height: 100%;
  width: 100%;
  background-image: conic-gradient(from var(--angle), #FF4500, #00ff99, #9C27B0, #ff4545);
  top: 50%;
  left: 50%;
  translate: -50% -50%;
  z-index: -1;
  padding: 3px;
  border-radius: 24px !important;
  animation: 3s spin linear infinite;
}

.floating-logo::before {
  filter: blur(1.5rem);
  opacity: 0.5;
  border-radius: 24px !important;
}
@property --angle{
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
/* Animaci√≥n del arco iris */
@keyframes spin {
  from {
    --angle: 0deg;
  }
  to {
    --angle: 360deg;
  }
}
    
</style>  